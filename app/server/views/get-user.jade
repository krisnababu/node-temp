
extends layout

block content
	div.navbar.navbar-fixed-top
		div.navbar-inner
			div.container-fluid
				button#btn-settings.btn.btn-primary
					| Settings
				button#btn-home.btn.btn-primary
					| Home
				button#btn-report.btn.btn-primary
					| Weekly Report
				button#btn-monthly-report.btn.btn-primary
					| Monthly Report
				button#btn-user-report.btn.btn-primary
					| User Report
				button#btn-tag-report.btn.btn-primary
					| Search
				button#btn-topic-report.btn.btn-primary
					| Topic Report
				button#btn-logout.btn.btn-primary
