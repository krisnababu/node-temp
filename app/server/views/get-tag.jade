
extends layout

block content
	div.navbar.navbar-fixed-top
		div.navbar-inner
			div.container-fluid
				button#btn-settings.btn.btn-primary
					| Settings
				button#btn-home.btn.btn-primary
					| Home
				button#btn-report.btn.btn-primary
					| Weekly Report
				button#btn-monthly-report.btn.btn-primary
					| Monthly Report
				button#btn-user-report.btn.btn-primary
					| User Report
				button#btn-logout.btn.btn-primary
					| Sign Out
	div.get-user
		form( method="post")#post-tag-form.well.span4
			label Search(Search in the status message's)
			input(type="text", name="post-tag", id='post-tag-txt').span4.required
			button(type="submit")#btn-posttag.btn.btn-primary
				| Submit
block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/js/views/home.js')
	script(src='/js/controllers/homeController.js')
	script(src='/js/form-validators/accountValidator.js')
	script(src='/socket.io/socket.io.js')
	script(src='/js/views/post-tag.js')
	