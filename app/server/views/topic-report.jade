
extends layout

block content
	div.navbar.navbar-fixed-top
		div.navbar-inner
			div.container-fluid
				button#btn-settings.btn.btn-primary
					| Settings
				button#btn-home.btn.btn-primary
					| Home
				button#btn-report.btn.btn-primary
					| Weekly Report
				button#btn-monthly-report.btn.btn-primary
					| Monthly Report
				button#btn-user-report.btn.btn-primary
					| User Report
				button#btn-tag-report.btn.btn-primary
					| Search
				button#btn-topic-report.btn.btn-primary
					| Topic Report
				button#btn-logout.btn.btn-primary
					| Sign Out
	div.user-report
		div.rptheaders
			h1  #{userName} #{reportName}
			span  Month- #{month}
		div.rptfooter
			a(href='#{prev}', class="btn btn-primary",id="prev") Previous
			a(href='#{next}', class="btn btn-primary",id="next") Next
		div.rptdata
			each item in results
				ul
					div.lstheader #{item.topic}
					each val in item.posts
						li #{val.post}  &nbsp &nbsp [#{val.user}]
			br
			br
		
block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/js/views/home.js')
	script(src='/js/controllers/homeController.js')
	script(src='/js/form-validators/accountValidator.js')
	script(src='/socket.io/socket.io.js')

	
